<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <AutoCompleteTextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:id="@+id/activity_list_enterItemName"
            android:hint="@string/enterItemName_hint"
            android:inputType="text"
            android:maxLines="1" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_marginEnd="5dp"
            android:text="@string/add"
            android:background="@drawable/list_selector"
            android:id="@+id/activity_list_btnAddItem"
            android:onClick="onClickAddItem"/>
        <ImageButton
            android:src="@drawable/ic_mic_black_24dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/activity_list_btnVoiceAdding"
            android:onClick="onClickVoiceAddItem"/>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_list_itemsList"/>


</LinearLayout>
